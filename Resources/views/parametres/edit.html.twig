{% extends "OVEProceduresBundle:Default:base.html.twig" %}

{% block content -%}
<h1>Modification d'un param√®tre</h1>


<form class="edit-form" action="{{ path('parametres_update', { id: entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
  <input type="hidden" name="_method" value="PUT" />
  {{ form_widget(edit_form._token) }}

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-2 text-left" >
        <button class="btn btn-primary" type="submit">Sauvegarder</button>
        <a class="btn btn-default" title="Retour sans sauvegarder" href="#" onclick="window.history.back();return false;">Annuler</a>
      </div>
      <div class="col-md-5 text-left" >
        <h1>{{entity.intitule}}</h1>
      </div>
    </div>
  </div>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="form-group col-lg-12">
          <label class="control-label nowrap" style="text-align:left">Valeur : </label>
          {{ form_widget(edit_form.code    , {'attr': {'style': 'display:none'}}) }}
          {{ form_widget(edit_form.intitule, {'attr': {'style': 'display:none'}}) }}
          {{ form_widget(edit_form.valeur  , {'attr': {'style': 'width:50%'}}) }}
        </div>
      </div>
    </div>
  </div>
</form>


